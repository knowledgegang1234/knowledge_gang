<% content_for :title, @category.name %>
<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <div class="mb-2 p-4 category-follow-section c-wrap">
        <div class="d-flex align-items-center">
          <div class="category-follow-img"></div>
          <div class="category-info ml-3">
            <h3 class="font-weight-bold text-uppercase"><%= @category.name %></h3>
            <div id="follow-container">
              <%= render 'followers/follow_action' %>
            </div>
          </div>
        </div>
        <p class="mt-3 mb-0">Enriched with <%= @blogs_count %> articles, Followed by <%= @followers_count %> readers</p>
      </div>
      <%= render 'blogs/blogs' %>
    </div>
    <div class="col-lg-3">
      <div></div>
    </div>
  </div>
</div>
<%= render 'following_header', tab_selected: 0 %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10 px-lg-0">
      <div class="row">
        <div class="col-md-9 mb-5 user-articles">
            <div class="mb-4 text-dark mt-5">
                Suggestion list
            </div>
        </div>
        <div class="col-md-3">
          <div class="mb-4 text-dark mt-5">
            <h5 class="mb-3">
            <b>People you follow</b>
            <a class="pl-3" href="<%= follow_people_user_path(current_user.username) %>">See all</a>
            </h5>
            <% if @following_people.present? %>
              <% @following_people.each do |people| %>
                <div class="mb-2">
                    <% if people.avatar.present? %>
                        <img src="<%= people.avatar %>" class="rounded-circle user-img-30 mr-2" alt="user">
                    <% else %>
                        <img class="user-img-30 rounded-circle mr-2" src="<%= image_url('default_user.png') %>" alt="user">
                    <% end %>
                    <%= link_to user_path(people.username) do %>
                        <%= people.username %>
                    <% end %>
                </div>
                <div id="follow-container-1-<%= people.id %>" class="user-show-follow">
                    <% follow_action = current_user&.following?(people) ? 'unfollow' : 'follow'%>
                    <% if follow_action == 'follow' %>
                        <button class="btn btn-theme follow-btn btn-sm d-flex align-items-center" data-followable_type="<%= 'User' %>" data-followable_id="<%= people.id %>" data-list_page="1" data-follow_action="<%= follow_action %>"> <i class="fas fa-user-plus f12 mr-1 text-white"></i>Follow</button>
                    <% else %>
                        <button class="btn btn-theme follow-btn btn-sm align-items-center" data-followable_type="<%= 'User' %>" data-followable_id="<%= people.id %>" data-list_page="1" data-follow_action="<%= follow_action %>"><i class="fas fa-check f12 mr-1 text-white "></i>Following</button>
                    <% end %>
                </div>
                <hr>
              <% end %>
            <% else %>
              <h5 class="mb-3 pl-3"><i class="fas fa-tag mr-2"></i>You are not following to any one...</h5>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>
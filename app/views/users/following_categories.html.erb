<%= render 'following_header' , tab_selected: 1 %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10 px-lg-0">
      <div class="row">
        <div class="col-md-9 mb-5">
          <div class="mb-4 text-dark mt-5">
            <div class="card-columns">
              <% @categories.each do |category| %>
                <div class="card">
                  <div class="card-block p-2">
                    <div class="mb-2">
                      <%= link_to category_path(category.slug) do %>
                        <p class="card-title"><b><%= category.name %></b></p>
                        Total Articles: <b><%= category.blogs_count %></b>
                      <% end %>
                    </div>
                    <%= render 'list_follow_btn', entity: category %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="mb-4 text-dark mt-5">
            <h5 class="mb-3">
            <b>Google Ads</b>
          </div>
          <div class="mb-4 text-dark mt-5">
            <h5 class="mb-3">
            <b>Google Ads</b>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>
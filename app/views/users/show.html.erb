<div class="row user-profile container ml-3">
  <div class="col-12">
    <div class="border shadow mb-4 p-4 bg-light text-dark border-corner">
      <div class="row">
        <div class="col-2 pl-5">
          <% if @user.avatar %>
            <img src="<%= @user.avatar %>" class="rounded-circle card-img-top">
          <% else %>
            <img class="card-img-top rounded-circle" src="<%= image_url('default_user.png') %>">
          <% end %>
        </div>
        <div class="col-10">
          <span class="text-20 mr-3"><b><%= @user.name || @user.username %></b></span>
          <% if current_user.id != @user.id %>
            <div id="follow-container">
              <%= render 'followers/follow_action' %>
            </div>
          <% end %>
          <p class="text-15 mt-2"> writer since <%= @user.created_at.strftime("%B, %Y") %></p>
          <div class="mt-1 bio-text">
            <i class="fas fa-quote-left mr-3"></i><%= @user.bio %><i class="fas fa-quote-right ml-3"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<h3 class="ml-5 mb-4"><b>Articles:</b></h3>
<div class="row">
  <div class="col-md-9 mb-5">
      <%= render 'blogs/blogs' %>
  </div>
  <div class="col-md-3">
    <div class="mb-4 text-dark">
      <h5 class="mb-3"><b>Top tags:</b></h5>
      <% @top_tags.each do |tag| %>
        <%= link_to tag_path(tag.slug) do %>
          <button type="button" class="btn btn-primary mr-2 mb-2">
            <%= tag.name %> <span class="badge badge-light"><%= tag.count %></span>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
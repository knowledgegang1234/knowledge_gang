<% content_for :title, @tag.name %>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="mb-2 p-4 c-wrap">
        <h3><i class="fas fa-tag mr-2"></i><%= @tag.name %>
          <div id="follow-container">
            <%= render 'followers/follow_action' %>
          </div>
        </h3>
        <p class="mt-3 mb-0">Tagged in <%= @blogs_count %> articles, Followed by <%= @followers_count %> readers</p>
      </div>
      <%= render 'blogs/blogs' %>
    </div>
    <div class="col-md-3">
      <div></div>
    </div>
  </div>
</div>
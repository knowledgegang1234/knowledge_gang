<br>
<% @blogs.each do |blog| %>
<div class="border shadow m-3 p-4 bg-light text-dark">
  <h3><%= blog.title %></h3>
  <p class="mt-3"><%= blog.description.gsub("<table>","<table class='table table-bordered'>").html_safe %></p>
  <h5>Category: <%= link_to(blog.category.name, category_path(blog.category.slug)) %></h5>
  <p class="mt-3">Tags: <%= raw blog.taggings.map { |t| link_to t.tag.name, tag_path(t.tag.slug) }.join(', ') %></p>
  <div><%= link_to 'Show', blog_show_path(id: blog, category_id: blog.category), class: "btn btn-outline-primary btn-sm" %> | <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-outline-info btn-sm" %> | <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %> </div>
</div>
<%end%>



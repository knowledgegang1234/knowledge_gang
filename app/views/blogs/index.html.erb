<% content_for :title, "Knowledge Gang" %>
<div class="container-fluid bg-light py-5 shadow-sm mb-3">
  <div class="row">
    <div class="col-md-6 home-banner-padding home-banner-text">
      <div class="text-verticle-center">
        <h2 class="text-60">Share your knowledge</h2>
        <h6 class="pt-3">Share the Expertise, Knowledge and Stories of around the world with the society. You may share the Analysis, Trending News or story about Celebrities and Innovations going on around the world, Ancient Histories and many more.</h6>
        <h6>Every KNOWLEDGE is welcome.</h6>
      </div>
    </div>
    <div class="col-md-6 home-banner-padding text-center home-banner-image">
      <img src= "<%= image_url('knowledge-home.jpg') %>" loading="lazy">
    </div>
  </div>
</div>
<div class="container-fluid mt-lg-5">
  <div class="row">
    <div class="col-md-8">
      <%= render 'blogs' %>
    </div>
    <div class="col-md-3 ml-4">
      <div class="text-dark mb-5">
        <h6 class="mb-4"><b>Top Categories</b></h6>
        <% @trending_categories.each do |category| %>
          <%= link_to category_path(category.slug)do %>
            <div class="mr-2 pb-2 pt-2 mb-1 highlight-hover">
              <p class="mb-1"><b><span class="ml-3"><%= category.name %></span></b><span class="float-right mr-4 inline"><i class="fas fa-newspaper mr-2"></i><%= category.blogs_count || 0 %></span></p>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="mt-5 text-dark">
        <h6 class="mb-4"><b>Must Explore tags</b></h6>
        <% @home_tags.each do |tag_name, tag_detail| %>
          <%= link_to tag_path(tag_detail[:slug]) do %>
            <div class="mr-2 pb-2 pt-2 mb-1 highlight-hover">
              <p class="mb-1"><b><span class="ml-3"><i class="fas fa-tag mr-2"></i><%= tag_name %></span></b><span class="float-right mr-4 inline"><i class="fas fa-user-tag mr-2 ml-2"></i><%= tag_detail[:blog_count] %></span></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

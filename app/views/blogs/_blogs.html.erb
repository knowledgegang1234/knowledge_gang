<% if @blogs.present? %>
  <% @blogs.each_with_index do |blog, index| %>
    <% if ((index + 1) % 4 == 0) %>
      <div class="content-wrap c-wrap">
        <div>google ad</div>
      </div>
    <% end %>
    <!-- .content-wrap -->
    <div class="content-wrap c-wrap">
      <div class="blog-info">
        <div class="user-img"></div>
        <div class="blog-detail">
          <div class="u_name">
            <%= link_to(blog.user.name, user_path(id: blog.user.username)) %>
          </div>
          <div class="blog-category">
            <%= link_to(blog.category.name, category_path(blog.category.slug)) %> 
            <span>&#8211;</span>
            <span class="f12"> <%= blog.updated_at.strftime('%b %d, %Y') %></span>
          </div>
        </div>
      </div>
      <div class="blog-desc">
        <% if blog.live? %>
          <%= link_to blog_show_path(id: blog, category_id: blog.category) do %>
            <h3><%= blog.title %></h3>
            <p class="mb-0"><%= raw blog.short_description %></p>
          <% end %>
        <% else %>
          <%= link_to edit_blog_path(blog.slug) do %>
            <h3><%= blog.title %></h3>
            <p class="mb-0"><%= raw blog.short_description %></p>
          <% end %>
        <% end %>
      </div>
      <div class="blog-activity">
        
        <p class="mt-3 inline-para"><%= blog.likes_count %> <i class="fas fa-heart fa-theme-red"></i></p>
        <p class="mt-3 inline-para"><%= blog.comments_count %> <i class="fas fa-comments"></i></p>
      </div>
    </div>
    <!-- end of .content-wrap -->
  <% end %>
  <div class="ml-lg-5">
    <%= paginate @blogs %>
  </div>
<% else %>
  <div class="content-wrap c-wrap text-center">
    <img src= "<%= image_url('no-content-found.svg') %>" width= "60%" height= "60%" loading="lazy">
    <div class="text-center" style="display: inline-block;">
      <span>No articles found </span>
      <% if current_user %>
        <%= link_to 'Write your Own', new_blog_path ,class: 'btn btn-bg mt-3 mb-3 btn-theme' %>
      <% else %>
        <a href="javascript:void(0)" onclick="showModalPopUp('login_modal')" class="btn btn-bg mt-3 mb-3 btn-theme">Write your Own</a>
      <% end %>
    </div>
  </div>
<% end %>
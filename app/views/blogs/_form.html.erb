<%= form_with(model: @blog, local: true, html: {class: "container mb-4 border border-light pb-3 pt-3 shadow"}) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-3">
    <label>Title</label>
    <%= form.text_field :title, class: "form-control", id: "validationCustom01", required: true %>
  </div>

  <div class="my-3">
    <label>Description</label>
    <%= form.text_area :description , class: "form-control redactor-textarea", id: "validationCustom02", required: true %>
  </div>

  <div class="my-3">
    <label>Category</label>
    <%= form.select :category_id, options_for_select(Category.all.collect{ |category| [category.name, category.id]}) , class: "form-control redactor-textarea", id: "validationCustom02", required: true %>
  </div>

   <div class="my-3">
    <label>Tags (separated by commas)</label>
    <% if @blog.persisted? %>
      <%= form.text_field :tag_list, value: @blog.taggings.map{ |t| t.tag.name }.join(','), class: "form-control", id: "validationCustom03", required: true %>
    <% else %> 
      <%= form.text_field :tag_list, class: "form-control", id: "validationCustom03", required: true %>
    <% end %>
   </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<% if @follow_action == 'follow' %>
  <button class="btn btn-outline-success ml-3 follow-btn" data-followable_type="<%= @followable_type %>" data-followable_id="<%= @followable_id %>" data-follow_action="<%= @follow_action %>"> +Follow</button>
<% else %>
  <button class="btn btn-theme ml-3 follow-btn" data-followable_type="<%= @followable_type %>" data-followable_id="<%= @followable_id %>" data-follow_action="<%= @follow_action %>"><i class="fas fa-check"></i> Following</button>
<% end %>